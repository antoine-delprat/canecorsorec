<div id="main-release">
  <div id="release-content">
    <div>
      <div class="release-picture" style="background-image: url(<%= cl_image_path(@release.photo.key) %>)"></div>
      <div class="release-info">
        <p><%=@release.name%></p>
        <p>par <span><%=@release.artist.name%></span></p>
        <p>sorti le <%=@release.release_date%></p>
      </div>
    </div>
    <div class="release-player">
          <iframe width="100%" height="450" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=<%= @release.soundcloud_link %>&color=%23cd16eb&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"></iframe>
    </div>
  </div>
  <div id="release-actions">
    <div><%= link_to "Acheter sur Bandcamp", @release.bandcamp_link, class: "release-cta-main" %></div>
    <div><%= link_to "Ã‰couter sur Spotify", @release.spotify_link, class: "release-cta-secondary" %></div>
  </div>
</div>
