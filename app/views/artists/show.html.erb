<div id="main-artist">
  <%= link_to "< retour", artists_path, class: "artist-back" %>
  <div id="artist-content">
    <img class="artist-picture" src="<%= cl_image_path(@artist.avatar.key) %>" alt="<%= @artist.name %>">
    <div class="artist-description">
      <h2><%= @artist.name %></h2>
      <p><%= @artist.description %></p>
    </div>
    <div class="artist-details">
      <div>
        <p class="artist-details-title">Performances</p>
        <p><%= @artist.performance %></p>
      </div>
      <div>
        <p class="artist-details-title">Labels</p>
        <p><%= @artist.label_list %></p>
      </div>
      <div>
        <p class="artist-details-title">RÃ©seaux</p>
        <% if @artist.soundcloud_link != "" %>
          <p class="artist-links"><%= link_to "Soundcloud", @artist.soundcloud_link, target: "_blank" %></p>
        <% end %>
        <% if @artist.instagram_link != "" %>
          <p class="artist-links"><%= link_to "Instagram", @artist.instagram_link, target: "_blank" %></p>
        <% end %>
        <% if @artist.facebook_link != "" %>
          <p class="artist-links"><%= link_to "Facebook", @artist.facebook_link, target: "_blank" %></p>
        <% end %>
        <% if @artist.spotify_link != "" %>
          <p class="artist-links"><%= link_to "Spotify", @artist.spotify_link, target: "_blank" %></p>
        <% end %>
      </div>
      <div>
        <p class="artist-details-title">Ville</p>
        <p><%= @artist.city %></p>
      </div>
    </div>
    <% if @artist.video_link.include?("youtube") %>
      <div class="artist-video">
        <iframe width="480" height="270" src="<%= @artist.video_link %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
      </div>
    <% elsif @artist.video_link.include?("soundcloud") %>
      <div class="artist-podcast">
        <iframe width="100%" height="180" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=<%= @artist.video_link %>&color=%23cd16eb&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"></iframe>
      </div>
    <% end %>
  </div>
  <% if @artist.name != 'Alder' %>
    <div id="artist-booking">
      <%= link_to "Booker cet artiste", new_contact_path, class: "artist-cta-main" %>
    </div>
  <% end %>
</div>
